#!/usr/bin/env php
<?php

declare(strict_types=1);

require __DIR__ . '/../vendor/autoload.php';

use KikiCourier\Application\CourierServiceApp;

$app = new CourierServiceApp(STDIN, STDOUT);

try {
    $app->run();
} catch (\Throwable $e) {
    fwrite(STDERR, 'Error: ' . $e->getMessage() . PHP_EOL);
    exit(1);
}