{
  "name": "kiki/courier-service",
  "description": "Delivery cost and time estimation system built with TDD, SOLID, and Clean Code",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Inderpreet",
      "email": "inderpreetnarula@yahoo.com"
    }
  ],
  "require": {
    "php": ">=8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "KikiCourier\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KikiCourier\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:feature": "phpunit --testsuite=Feature"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
